@model IEnumerable<LightNovelSite.Models.Novels>

@{
    ViewData["Title"] = "Novels";
}

<h1>Novels</h1>

<p>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    }
</p>

<div class="novel-container">
    @foreach (var item in Model)
    {
        <div class="novel-item">
            <a asp-action="Details" asp-route-id="@item.Title" class="link">
                <img src="@item.ImageURL" alt="@item.Title style="max-width: 100px; max-height: 100px;" />
            </a>
            <div class="novel-info">
                <div>@Html.DisplayFor(modelItem => item.Title)</div>
                <div>@Html.DisplayFor(modelItem => item.Chapters)</div>
                <div class="actions">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <button class="btn btn-primary">
                            <a asp-action="Edit" asp-route-id="@item.Title" class="link">Edit</a>
                        </button>
                        <button class="btn btn-primary">
                            <a asp-action="Delete" asp-route-id="@item.Title" class="link">Delete</a>
                        </button>
                        <button class="btn btn-primary">
                            <a asp-action="AddChapter" asp-route-id="@item.Title" class="link">Add Chapter</a>
                        </button>
                    }
                </div>
            </div>
        </div>
    }
</div>


<style>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" > </script >

    h1 {
        font-size: 2rem;
        margin-bottom: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th,
        .table td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            color: whitesmoke
        }

    .actions {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .btn {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        text-decoration: none;
        cursor: pointer;
        color: whitesmoke
    }

    .btn-primary {
        background-color: cornflowerblue;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: rebeccapurple;
        }

    .link {
        text-decoration: none;
        color: inherit;
    }

    .novel-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        max-width: 800px; 
        margin: 0 auto; /
        flex-direction: row;
    }

    .novel-item {
        width: calc(25% - 20px); 
        background-color: #333;
        padding: 10px;
        border-radius: 8px;
        box-sizing: border-box;
    }

    .novel-info {
        margin-top: 10px;
    }
</style>


