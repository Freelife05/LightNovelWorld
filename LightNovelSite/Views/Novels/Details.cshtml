@model LightNovelSite.Models.Novels

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Novels</h4>
    <hr/>
    <dl class="row">
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageURL)" alt="Novel Image" />
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title   )
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Chapters)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Chapters)
        </dd>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Read" asp-route-id= "@Model?.Title">Read</a> |
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
       <a asp-action="Edit" asp-route-id="@Model?.Title">Edit</a>
    }
    <a asp-action="Index">Back to List</a> 
</div>
