@model LightNovelSite.Models.Novel

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>

    <div class="novel-details">
        <h4>Novels</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Chapters)</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Chapters)</dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Title" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

<style>

    .container {
        margin-top: 20px;
    }

    h1 {
        font-size: 2rem;
        margin-bottom: 20px;
    }

    h3 {
        margin-bottom: 20px;
    }

    .novel-details {
        margin-bottom: 20px;
    }

    .btn {
        padding: 8px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-danger {
        background-color: #dc3545;
        color: #fff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

        .btn-danger:hover,
        .btn-secondary:hover {
            opacity: 0.9;
        }

</style>


