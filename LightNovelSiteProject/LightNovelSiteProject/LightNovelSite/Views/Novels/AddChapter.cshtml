@model LightNovelSite.Models.Chapter

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h2>Add Chapter</h2>
            <form asp-action="AddChapter">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ChapterTitle" class="control-label">Chapter Title</label>
                    <input asp-for="ChapterTitle" class="form-control" />
                    <span asp-validation-for="ChapterTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content" class="control-label">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="20"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="NovelTitle" />
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ChapterNumber" />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>

    .container {
        margin-top: 20px;
    }

    h2 {
        font-size: 1.8rem;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn {
        padding: 8px 20px;
        border-radius: 4px;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #007bff;
        color: #fff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #fff;
        border: none;
    }

        .btn-primary:hover,
        .btn-secondary:hover {
            opacity: 0.9;
        }

</style>